<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sinInternet8">
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#02E2FF"
                android:gravity="center"
                android:text="Sección I Procedimientos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tiendas"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button3" />

            <TextView
                android:id="@+id/Panadería"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#02E2FF"
                android:gravity="center"
                android:text="Sección II Instalaciones y áreas"
                app:layout_constraintTop_toBottomOf="@+id/tiendas" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/formularios"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Panadería" />

            <TextView
                android:id="@+id/Tortilleria"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#02E2FF"
                android:gravity="center"
                android:text="Sección III Equipos y utensilios"
                app:layout_constraintTop_toBottomOf="@+id/formularios" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/formulariostor"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Tortilleria" />

            <TextView
                android:id="@+id/Pescados"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#02E2FF"
                android:gravity="center"
                android:text="Sección IV Servicios"
                app:layout_constraintTop_toBottomOf="@+id/formulariostor" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/formulariospesc"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Pescados" />

            <TextView
                android:id="@+id/Carnes"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#02E2FF"
                android:gravity="center"
                android:text="Sección V Almacenamiento"
                app:layout_constraintTop_toBottomOf="@+id/formulariospesc" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/formulariosCa"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Carnes" />


            <TextView
                android:id="@+id/Frutas"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#02E2FF"
                android:gravity="center"
                android:text="Sección VI Control de Operaciones"
                app:layout_constraintTop_toBottomOf="@+id/formulariosCa" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/formulariosfru"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Frutas" />

            <TextView
                android:id="@+id/slc"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#02E2FF"
                android:gravity="center"
                android:text="Sección VII Salud e Higiene Personal"
                app:layout_constraintTop_toBottomOf="@+id/formulariosfru" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/formulariosslc"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/slc" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="finalizar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/formulariosslc" />




        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>